<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shock.memelauncher">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        >

        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Main.Wallpaper"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            >
            <intent-filter>
                <!-- Intent filter for the launcher activity -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- Intent filter for the default activity -->
                <!--<action android:name="android.intent.action.MAIN" />-->
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            </intent-filter>
        </activity>

        <activity
            android:name=".WarningActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Main"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>
