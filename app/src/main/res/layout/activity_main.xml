<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20dp"
    tools:context="com.example.shock.memelauncher.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/photo_card"
        style="@style/CardView.Main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30">

        <com.example.shock.memelauncher.view.CompoundAppView
            android:id="@+id/photo_compound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/skype_card"
        style="@style/CardView.Main"
        android:layout_width="0dp"
        android:layout_marginStart="15dp"
        android:layout_height="match_parent"
        android:layout_weight="60">

        <com.example.shock.memelauncher.view.CompoundAppView
            android:id="@+id/skype_compound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/applications_card"
        style="@style/CardView.Main.Weight.Vertical"
        android:layout_width="0dp"
        android:layout_marginStart="15dp"
        android:layout_height="match_parent"
        android:layout_weight="10">

        <TextView
            android:id="@+id/applications_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/advanced_mode"
            android:textSize="24sp" />

    </android.support.v7.widget.CardView>
</LinearLayout>
